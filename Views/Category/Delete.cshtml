@model Category;

<h1 class="text-center">Delete Category</h1>

<div class="row justify-content-center">
    <form method="post" class="col-7">
        <input asp-for="Id" hidden />
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" disabled class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="number" disabled asp-for="DisplayOrder" class="form-control" id="exampleInputPassword1">
        </div>
        <button type="submit" class="btn btn-danger px-5 py-2">Submit</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary px-3 py-2">Back to Category</a>
    </form>
</div>